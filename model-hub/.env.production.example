# Environment Configuration for Production
# Copy this to .env and fill in your values

# ========================================
# MongoDB Configuration
# ========================================
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net
DATABASE_NAME=model_hub

# ========================================
# JWT Configuration
# ========================================
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-min-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================================
# AWS Configuration
# ========================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-2
S3_BUCKET_NAME=ai-model-bazaar-projects

# ========================================
# Demo Configuration
# ========================================
# For EC2: Use the Elastic IP or domain name
DEMO_BASE_URL=http://your-ec2-public-ip
DEMO_ENVIRONMENTS_PATH=/tmp/model-hub-demos
DEMO_PORT_START=8501
DEMO_PORT_END=8600

# ========================================
# File Upload Configuration
# ========================================
MAX_UPLOAD_SIZE_MB=500
ALLOWED_EXTENSIONS=.py,.pkl,.pt,.h5,.onnx,.txt,.json,.csv,.png,.jpg,.jpeg,.gif,.pth,.pb,.weights

# ========================================
# CORS Configuration
# ========================================
# For EC2: Include your domain and EC2 IP
CORS_ORIGINS=http://your-ec2-public-ip:3000,http://your-domain.com

# ========================================
# Frontend Configuration (for Docker build)
# ========================================
NEXT_PUBLIC_API_URL=http://your-ec2-public-ip:8000

# ========================================
# Debug (set to False in production)
# ========================================
DEBUG=False
